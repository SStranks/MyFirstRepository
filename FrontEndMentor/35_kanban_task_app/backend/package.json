{
  "name": "mern-ts-kanban-taskapp-api",
  "version": "1.0.0",
  "description": "",
  "author": "Simon Stranks",
  "license": "ISC",
  "main": "./dist/server.js",
  "type": "module",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "server"
    ],
    "exec": "ts-node --project ./tsconfig.json ./server/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "watch": "tsc -w",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "nodemon .",
    "prod": "node .",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "db-import": "ts-node ./server/config/dbImportData.ts --import"
  },
  "imports": {
    "#Config/*": "./server/config/*",
    "#Controllers/*": "./server/controllers/*",
    "#Models/*": "./server/models/*",
    "#Routes/*": "./server/routes/*",
    "#Utils/*": "./server/utils/*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.7.1",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.1",
    "typescript": "^4.8.4"
  }
}
